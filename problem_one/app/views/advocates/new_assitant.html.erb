<div class="col-md-4 col-md-offset-4">
  <h2>Add Assitant</h2>

  <%= form_for :advocate, url: add_assitant_advocates_path do |f| %>

    <div class="form-group">
      <%= f.label :full_name %><br />
      <%= f.text_field :full_name , class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :mobile %><br />
      <%= f.text_field :mobile , class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      <span class="sm_notes">You can use the same email address as your password for the login. You can change the password in edit profile section.</span>
    </div>

    <div class="form-group">
      <%= f.label :experience %><br />
      <%= f.select :experience, options_for_select((1..5).map{|m| [("#{m} year").pluralize(m) ,m] }), {prompt: "Select Experience"} , {class: "form-control", required: true} %>
    </div>

    <div class="form-group hide">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Advocate", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>